{
  "name": "nft-agent",
  "version": "0.2.1",
  "author": "DFST",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "test": "NODE_NO_WARNINGS=1 node --loader=ts-node/esm --enable-source-maps -r dotenv/config --require dotenv/config --env-file=.env --test",
    "local:agent": "CHAIN=local CLOUD=local DEPLOY=true MINT=true TRANSFER=true SELL=true BUY=true yarn test test/agent.test.ts",
    "devnet:agent": "CHAIN=devnet DEPLOY=true MINT=true TRANSFER=true SELL=true BUY=true yarn test test/agent.test.ts",
    "coverage": "rm -rf coverage && c8 yarn local:agent"
  },
  "node": {
    "version": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "c8": "^10.1.3",
    "dotenv": "^16.4.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "packageManager": "yarn@4.7.0",
  "dependencies": {
    "@silvana-one/abi": "^0.2.0",
    "@silvana-one/api": "^0.2.0",
    "@silvana-one/mina-prover": "^0.2.0",
    "@silvana-one/mina-utils": "^0.2.0",
    "@silvana-one/nft": "^0.2.0",
    "@silvana-one/prover": "^0.2.0",
    "@silvana-one/storage": "^0.2.0",
    "@silvana-one/token": "^0.2.0",
    "@silvana-one/upgradable": "^0.2.0",
    "o1js": "2.2.0",
    "unique-names-generator": "^4.7.1"
  },
  "c8": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "test/**",
      "dist/**",
      "coverage/**",
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "all": true,
    "instrument": true,
    "source-map": true,
    "produce-source-map": true
  }
}
